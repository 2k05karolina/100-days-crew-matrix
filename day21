import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();

        while (t>0) {
            int k = sc.nextInt();
            int x = sc.nextInt();

            int remainingDays = (k * 7) - x;{

            System.out.println(remainingDays);
            }
            t--;
        }
        sc.close();

	

	}
}
